                        <handDesc>
                            <handNote xml:id="calendarPub" medium="print">New Friendship Calendar
                                Company printing the calendar sheets.</handNote>
                            <handNote xml:id="redPen" medium="red inkpen">Mary Behrend writing in a
                                red pen.</handNote>
                            <handNote xml:id="pencil" medium="pencil">Mary Behrend writing in a
                                pencil.</handNote>
                            <handNote xml:id="blackpen" medium="black inkpen"> This is usually large
                                and very clear to read compared to red and pencil</handNote>
